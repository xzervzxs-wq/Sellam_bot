        let drawingRectangle = false;
        let startX, startY;
        let currentRect = null;

        function handlePageClick(e) {
            if (!editMode) return;

            const rect = e.target.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;

            if (!drawingRectangle) {
                startX = x;
                startY = y;
                drawingRectangle = true;
                createRectangle(x, y);
            }
        }

        function createRectangle(x, y) {
            if (currentRect) currentRect.remove();

            currentRect = document.createElement('div');
            currentRect.className = 'verse-marker';
            currentRect.style.left = x + 'px';
            currentRect.style.top = y + 'px';
            currentRect.style.width = '0px';
            currentRect.style.height = '0px';

            const container = document.getElementById('verses-container');
            container.appendChild(currentRect);

            const img = document.getElementById('quran-page-img');
            const onMouseMove = (e) => {
                if (!drawingRectangle) return;
                const rect = img.getBoundingClientRect();
                const currentX = e.clientX - rect.left;
                const currentY = e.clientY - rect.top;

                const width = Math.abs(currentX - startX);
                const height = Math.abs(currentY - startY);

                currentRect.style.left = Math.min(startX, currentX) + 'px';
                currentRect.style.top = Math.min(startY, currentY) + 'px';
                currentRect.style.width = width + 'px';
                currentRect.style.height = height + 'px';
            };

            const onMouseUp = () => {
                drawingRectangle = false;
                document.removeEventListener('mousemove', onMouseMove);
                document.removeEventListener('mouseup', onMouseUp);

                if (currentRect && parseInt(currentRect.style.width) > 10) {
                    currentRect.classList.add('selected');
                    document.getElementById('annotation-tool').classList.add('active');
                } else if (currentRect) {
                    currentRect.remove();
                    currentRect = null;
                }
            };

            document.addEventListener('mousemove', onMouseMove);
            document.addEventListener('mouseup', onMouseUp);
        }

        function clearRectangle() {
            if (currentRect) {
                currentRect.remove();
                currentRect = null;
            }
        }

        function updateVerseSelect() {
