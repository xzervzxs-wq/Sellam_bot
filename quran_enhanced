            container.innerHTML = '';

            if (!versesData[currentPage]) return;

            versesData[currentPage].forEach((rect, index) => {
                const marker = document.createElement('div');
                marker.className = 'verse-marker';
                marker.style.left = rect.x + 'px';
                marker.style.top = rect.y + 'px';
                marker.style.width = rect.width + 'px';
                marker.style.height = rect.height + 'px';

                const badge = document.createElement('div');
                badge.className = 'verse-number-badge';
                badge.textContent = `${rect.surah}:${rect.ayah}`;

                marker.appendChild(badge);

                marker.onclick = (e) => {
                    e.stopPropagation();
                    if (!editMode) {
                        showTafsir(rect.surah, rect.ayah);
                    }
                };

                // Ù„ØªØ¹Ø¯ÙŠÙ„ Ø§Ù„Ø¥Ø­Ø¯Ø§Ø«ÙŠØ§Øª
                marker.ondblclick = (e) => {
                    if (editMode) {
                        e.stopPropagation();
                        deleteMarker(index);
                    }
                };

                container.appendChild(marker);
            });
        }

        function deleteMarker(index) {
            if (confirm('Ø­Ø°Ù Ù‡Ø°Ù‡ Ø§Ù„Ø¢ÙŠØ©ØŸ')) {
                versesData[currentPage].splice(index, 1);
                saveStoredData();
                renderVerseMarkers();
                updateDataPanel();
            }
        }

        async function showTafsir(surahNum, ayahNum) {
            const modal = document.getElementById('tafsir-modal');
            const content = document.getElementById('tafsir-content');
            const title = document.getElementById('tafsir-title');

            modal.style.display = 'flex';
            title.textContent = `ØªÙØ³ÙŠØ± Ø§Ù„Ø¢ÙŠØ© ${surahNum}:${ayahNum}`;
            content.textContent = 'Ø¬Ø§Ø±ÙŠ ØªØ­Ù…ÙŠÙ„ Ø§Ù„ØªÙØ³ÙŠØ±...';

            try {
                const res = await fetch(`https://api.alquran.cloud/v1/ayah/${surahNum}:${ayahNum}/${currentTafsir}`);
                const data = await res.json();
                content.innerHTML = `
                    <div style="margin-bottom: 15px; border-bottom: 1px solid #ddd; padding-bottom: 10px;">
                        <div style="color: var(--gold-primary); font-weight: bold; margin-bottom: 5px;">
                            Ø³ÙˆØ±Ø© ${data.data.surah.name} - Ø¢ÙŠØ© ${ayahNum}
                        </div>
                        <div style="color: #666; font-size: 14px; font-family: 'Amiri', serif;">
                            ${data.data.text}
                        </div>
                    </div>
                    <div style="color: #333;">${data.data.tafsir || 'Ù„Ø§ ÙŠÙˆØ¬Ø¯ ØªÙØ³ÙŠØ± Ù…ØªØ§Ø­'}</div>
                `;
            } catch (e) {
                content.textContent = 'Ø®Ø·Ø£ ÙÙŠ ØªØ­Ù…ÙŠÙ„ Ø§Ù„ØªÙØ³ÙŠØ±';
            }
        }

        function closeTafsir() {
            document.getElementById('tafsir-modal').style.display = 'none';
        }

        function updateDataPanel() {
            const list = document.getElementById('verses-list');
            const total = document.getElementById('total-verses');

            list.innerHTML = '';
            let count = 0;

            Object.keys(versesData).forEach(pageNum => {
                versesData[pageNum].forEach((rect, index) => {
                    count++;
                    const item = document.createElement('div');
                    item.className = 'verse-item';
                    item.innerHTML = `
                        <strong>Ø§Ù„Ø¢ÙŠØ© ${rect.surah}:${rect.ayah}</strong><br>
                        <small style="color: #888;">Ø§Ù„ØµÙØ­Ø© ${pageNum}</small><br>
                        <small style="color: #c5a059;">Ø§Ù„Ù…ÙˆÙ‚Ø¹: (${rect.x}, ${rect.y})</small>
                    `;
                    item.onclick = () => goToPage(pageNum);
                    list.appendChild(item);
                });
            });

            total.textContent = count;
        }

        function toggleDataPanel() {
            document.getElementById('data-panel').classList.toggle('active');
        }

        function downloadData() {
            const json = JSON.stringify(versesData, null, 2);
            const blob = new Blob([json], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `quran-verses-${new Date().toISOString().split('T')[0]}.json`;
            a.click();
            URL.revokeObjectURL(url);
        }

        function clearAllData() {
            if (confirm('Ø­Ø°Ù Ø¬Ù…ÙŠØ¹ Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª Ø§Ù„Ù…Ø­ÙÙˆØ¸Ø©ØŸ Ù‡Ø°Ø§ Ù„Ø§ ÙŠÙ…ÙƒÙ† Ø§Ù„ØªØ±Ø§Ø¬Ø¹ Ø¹Ù†Ù‡.')) {
                versesData = {};
                localStorage.removeItem('versesData');
                updateDataPanel();
                renderVerseMarkers();
                alert('ØªÙ… Ø­Ø°Ù Ø¬Ù…ÙŠØ¹ Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª');
            }
        }

        function saveStoredData() {
            localStorage.setItem('versesData', JSON.stringify(versesData));
        }

        function loadStoredData() {
            const saved = localStorage.getItem('versesData');
            if (saved) {
                versesData = JSON.parse(saved);
                updateDataPanel();
            }
        }

        function switchMode(mode) {
            // Ù„Ù„ØªÙˆØ³Ø¹ Ù„Ø§Ø­Ù‚Ø§Ù‹
            console.log('ØªØ¨Ø¯ÙŠÙ„ Ø§Ù„ÙˆØ¶Ø¹ Ø¥Ù„Ù‰:', mode);
        }

        // Close modals on Escape
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                closeTafsir();
                editMode = false;
                toggleEditMode();
            }
        });
    </script>
