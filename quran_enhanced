            const indicator = document.getElementById('mode-indicator');

            if (editMode) {
                btn.classList.add('active');
                indicator.textContent = 'Ø¹Ø±Ø¶: ØªØ­Ø±ÙŠØ±';
                document.getElementById('annotation-tool').classList.add('active');
                document.getElementById('quran-page-img').style.cursor = 'crosshair';
                document.getElementById('quran-page-img').onclick = handlePageClick;
            } else {
                btn.classList.remove('active');
                indicator.textContent = 'Ø¹Ø±Ø¶: Ù‚Ø±Ø§Ø¡Ø©';
                document.getElementById('annotation-tool').classList.remove('active');
                document.getElementById('quran-page-img').style.cursor = 'default';
                document.getElementById('quran-page-img').onclick = null;
                clearRectangle();
