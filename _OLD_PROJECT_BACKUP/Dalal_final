            const index = select.value;
            
            if (index === "") {
                alert('ÙŠØ±Ø¬Ù‰ Ø§Ø®ØªÙŠØ§Ø± Ù‚Ø§Ù„Ø¨ Ù…Ù† Ø§Ù„Ù‚Ø§Ø¦Ù…Ø© Ø£ÙˆÙ„Ø§Ù‹ Ù„ÙØªØ­Ù‡ ÙƒØ¹Ù†Ø§ØµØ±.');
                return;
