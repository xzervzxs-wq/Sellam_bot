                await new Promise(r => setTimeout(r, 200));

                // Ø§Ù„Ø­ÙØ¸ Ø¨Ø§Ù„Ø­Ø¬Ù… Ø§Ù„ÙØ¹Ù„ÙŠ Ø¨Ø¯Ù‚Ø© 300 DPI
