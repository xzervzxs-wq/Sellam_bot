<body>
    <!-- رأس التطبيق -->
    <div class="app-header">
        <div class="app-title">محرر التصاميم الرسمية</div>
        <div class="app-subtitle">Professional Design Editor</div>
    </div>

    <!-- الحاوية الرئيسية -->
    <div class="main-container">
        <!-- شريط التحكم -->
        <div class="control-panel">
            <!-- قسم المقاسات -->
            <div class="panel-section">
                <div class="panel-title">المقاس (سم)</div>
                <div class="size-inputs">
                    <input type="number" id="width-input" class="size-input" value="10" placeholder="العرض">
                    <span style="display: flex; align-items: center; color: var(--text-light);">×</span>
                    <input type="number" id="height-input" class="size-input" value="15" placeholder="الارتفاع">
                </div>
                <div class="size-label">عرض × ارتفاع</div>
            </div>

            <!-- قسم الأزرار -->
            <div class="panel-section">
                <div class="panel-title">الحفظ والتصدير</div>
                <div class="btn-group">
                    <button class="btn btn-primary" onclick="exportAsImage(false)">
                        <i class="fas fa-download"></i>
                        حفظ عالي الدقة
                    </button>
                    <button class="btn btn-primary" onclick="exportAsImage(true)">
                        <i class="fas fa-file-pdf"></i>
                        حفظ A4 مكرر
                    </button>
                    <button class="btn btn-secondary" onclick="toggleCropFrame()">
                        <i class="fas fa-crop"></i>
                        <span id="crop-btn-text">إظهار إطار القص</span>
                    </button>
                </div>
            </div>

            <!-- قسم المعلومات -->
            <div class="panel-section">
                <div class="panel-title">المعلومات</div>
                <div style="font-size: 12px; color: var(--text-light); line-height: 1.6;">
                    <p><strong>الدقة:</strong> 300 DPI</p>
                    <p><strong>الصيغة:</strong> PNG</p>
                    <p><strong>قابل للطباعة:</strong> نعم</p>
                </div>
            </div>
        </div>

        <!-- منطقة المعاينة -->
        <div class="preview-section">
            <div id="card" style="width: 378px; height: 567px;">
                <div class="text-area-wrapper">
                    <textarea id="text-input" placeholder="اكتب النص هنا..."></textarea>
                </div>
            </div>
        </div>
    </div>

    <!-- شاشة التصدير -->
    <div class="export-overlay">
        <div style="text-align: center;">
            <div class="export-spinner"></div>
            <div class="export-text">جاري معالجة التصدير...</div>
        </div>
    </div>

    <!-- نموذج التأكيد -->
    <div id="confirm-modal" class="modal">
        <div class="modal-content">
            <div class="modal-title">تأكيد التصدير</div>
            <div class="modal-message" id="modal-message"></div>
            <div class="modal-buttons">
                <button class="btn btn-secondary" onclick="closeModal()">إلغاء</button>
                <button class="btn btn-primary" onclick="confirmExport()">تأكيد</button>
            </div>
        </div>
    </div>

    <script>
        // الثوابت والمتغيرات العامة
        const DPI = 300;
        const PIXELS_PER_CM = 118.11; // 300 DPI in px/cm
        const MM_PER_INCH = 25.4;
        const PIXELS_PER_INCH = DPI;
        
        let lastExportMode = null;

        // دالة تحديث حجم البطاقة
        function updateCardSize() {
            const width = parseFloat(document.getElementById('width-input').value) || 10;
            const height = parseFloat(document.getElementById('height-input').value) || 15;
            
            const card = document.getElementById('card');
            card.style.width = (width * PIXELS_PER_CM) + 'px';
            card.style.height = (height * PIXELS_PER_CM) + 'px';
        }

        // دالة تبديل إطار القص
        function toggleCropFrame() {
            const card = document.getElementById('card');
            const btn = document.getElementById('crop-btn-text');
            
            if (card.classList.contains('with-crop-frame')) {
                card.classList.remove('with-crop-frame');
                btn.textContent = 'إظهار إطار القص';
            } else {
                card.classList.add('with-crop-frame');
                btn.textContent = 'إخفاء إطار القص';
            }
        }

        // دالة التصدير الرئيسية
        async function exportAsImage(isA4 = false) {
            const width = parseFloat(document.getElementById('width-input').value);
            const height = parseFloat(document.getElementById('height-input').value);

            if (!width || !height || width <= 0 || height <= 0) {
                alert('الرجاء إدخال مقاسات صحيحة');
                return;
            }

            lastExportMode = { isA4, width, height };
            
            const message = isA4 
                ? `سيتم حفظ التصميم بمقاس ${width}×${height} سم مكرر على ورقة A4 (210×297 سم) بدقة 300 DPI`
                : `سيتم حفظ التصميم بمقاس ${width}×${height} سم بدقة 300 DPI`;
            
            document.getElementById('modal-message').textContent = message;
            document.getElementById('confirm-modal').classList.add('active');
        }

        // دالة تأكيد التصدير
        async function confirmExport() {
            closeModal();
            
            const { isA4, width, height } = lastExportMode;
            const overlay = document.querySelector('.export-overlay');
            overlay.style.display = 'flex';

            try {
                if (isA4) {
                    await exportA4(width, height);
                } else {
                    await exportSingle(width, height);
                }
            } catch (error) {
                console.error('خطأ في التصدير:', error);
                alert('حدث خطأ أثناء التصدير. الرجاء المحاولة مرة أخرى.');
            } finally {
                overlay.style.display = 'none';
            }
        }

        // دالة تصدير الصورة المفردة
        async function exportSingle(width, height) {
            const card = document.getElementById('card');
            const originalWidth = card.style.width;
            const originalHeight = card.style.height;

            // تحديث الحجم
            card.style.width = (width * PIXELS_PER_CM) + 'px';
            card.style.height = (height * PIXELS_PER_CM) + 'px';

            // إزالة إطار القص مؤقتاً
            const hadCropFrame = card.classList.contains('with-crop-frame');
            card.classList.remove('with-crop-frame');

            try {
                const dataUrl = await htmlToImage.toPng(card, {
                    pixelRatio: 4,
                    scale: 1,
                    backgroundColor: '#ffffff'
                });

                // حفظ الصورة
                const link = document.createElement('a');
                link.href = dataUrl;
                link.download = `design_${width}x${height}cm_300dpi.png`;
                link.click();
            } finally {
                // استعادة الحالة الأصلية
                card.style.width = originalWidth;
                card.style.height = originalHeight;
                if (hadCropFrame) {
                    card.classList.add('with-crop-frame');
                }
            }
        }

        // دالة تصدير A4
        async function exportA4(itemWidth, itemHeight) {
            const A4_WIDTH_CM = 21; // 210mm
            const A4_HEIGHT_CM = 29.7; // 297mm
            const SPACING_CM = 0.5; // فرق 5 ملم بين كل نسخة
            
            const itemWidthPx = itemWidth * PIXELS_PER_CM;
            const itemHeightPx = itemHeight * PIXELS_PER_CM;
            const spacingPx = SPACING_CM * PIXELS_PER_CM;
            
            const a4WidthPx = A4_WIDTH_CM * PIXELS_PER_CM;
            const a4HeightPx = A4_HEIGHT_CM * PIXELS_PER_CM;

            // حساب عدد العناصر مع الفرق بينها
            const itemsPerRow = Math.floor(a4WidthPx / (itemWidthPx + spacingPx));
            const itemsPerCol = Math.floor(a4HeightPx / (itemHeightPx + spacingPx));
            const totalItems = Math.max(itemsPerRow * itemsPerCol, 1);

            // إنشاء مستند A4
            const a4Container = document.createElement('div');
            a4Container.style.width = a4WidthPx + 'px';
            a4Container.style.height = a4HeightPx + 'px';
            a4Container.style.backgroundColor = 'white';
            a4Container.style.padding = '0';
            a4Container.style.margin = '0';
            a4Container.style.display = 'flex';
            a4Container.style.flexWrap = 'wrap';
            a4Container.style.alignContent = 'flex-start';
            a4Container.style.gap = spacingPx + 'px';
            a4Container.style.position = 'absolute';
            a4Container.style.left = '-9999px';

            // إضافة العناصر إلى A4 مع الإطار الرمادي الخفيف
            for (let i = 0; i < totalItems; i++) {
                const itemWrapper = document.createElement('div');
                itemWrapper.style.width = itemWidthPx + 'px';
                itemWrapper.style.height = itemHeightPx + 'px';
                itemWrapper.style.border = '2px solid #d0d0d0'; // إطار رمادي خفيف
                itemWrapper.style.backgroundColor = 'white';
                itemWrapper.style.boxSizing = 'border-box';
                itemWrapper.style.overflow = 'hidden';
                itemWrapper.style.position = 'relative';

                // نسخ محتوى البطاقة
                const clone = document.getElementById('card').cloneNode(true);
                clone.style.width = '100%';
                clone.style.height = '100%';
                clone.style.margin = '0';
                clone.style.border = 'none';
                clone.style.boxShadow = 'none';
                clone.classList.remove('with-crop-frame');
                
                itemWrapper.appendChild(clone);
                a4Container.appendChild(itemWrapper);
            }

            document.body.appendChild(a4Container);

            try {
                const dataUrl = await htmlToImage.toPng(a4Container, {
                    pixelRatio: 4,
                    scale: 1,
                    backgroundColor: '#ffffff'
                });

                const link = document.createElement('a');
                link.href = dataUrl;
                link.download = `design_A4_${totalItems}copies_300dpi.png`;
                link.click();
            } finally {
                document.body.removeChild(a4Container);
            }
        }

        // دالة إغلاق النموذج
        function closeModal() {
            document.getElementById('confirm-modal').classList.remove('active');
        }

        // مستمعات الأحداث
        document.getElementById('width-input').addEventListener('input', updateCardSize);
        document.getElementById('height-input').addEventListener('input', updateCardSize);
        document.getElementById('text-input').addEventListener('input', () => {});

        // إغلاق النموذج عند الضغط خارجه
        document.getElementById('confirm-modal').addEventListener('click', (e) => {
            if (e.target.id === 'confirm-modal') {
                closeModal();
            }
        });

        // تحديث الحجم عند التحميل
        window.addEventListener('load', updateCardSize);

        // منع إغلاق الصفحة بدون حفظ
        window.addEventListener('beforeunload', (e) => {
            const text = document.getElementById('text-input').value;
            if (text.length > 0) {
                e.preventDefault();
                e.returnValue = '';
            }
        });
    </script>
</body>
</html>
